{
  "protocol": "https",
  "host": "localhost",
  "desired_port": 8080,
  "redirect_port": "",
  "cache_content": true,
  "bonjour_domain": false,
  "removePermanently": false,
  "versioning": true,
  "tokenIsValidForXDays": 60,

  "cacheDirname": "luma_cache",
  "contentPath": "luma_next",

  "privateKeyPath": "",
  "certificatePath": "",
  "passphrase": "",

  "lruCacheMax": 10000,
  "lruCacheMaxSize": 25000000,

  "deletedFolderName": "_bin",

  "ffmpeg_options": {
    "priority": 0,
    "timeout": 600
  },

  "mediaThumbQuality": 90,

  "regexpMatchFolderNames": "^([^.]+)$",
  "regexpGetFileExtension": "\\.[^.]*$",
  "regexpRemoveFileExtension": "(.+?)(\\.[^.]*$|$)",

  "api": {
    "enabled": false,
    "allow_all_domains": false,
    "domains_whitelist": ["localhost"]
  },

  "schema": {
    "fields": {
      "name_of_instance": {
        "type": "string"
      },
      "presentation_of_instance_fr": {
        "type": "string"
      },
      "presentation_of_instance_en": {
        "type": "string"
      },
      "contactmail_of_instance": {
        "type": "string"
      },
      "general_password": {
        "type": "string"
      },
      "signup_password": {
        "type": "string"
      },
      "enable_indexing": {
        "type": "boolean"
      },
      "remove_permanently": {
        "type": "boolean"
      },
      "upload_max_file_size_in_mo": {
        "type": "number"
      },
      "require_signup_to_contribute": {
        "type": "boolean"
      },
      "require_mail_to_signup": {
        "type": "boolean"
      },
      "enable_events": {
        "type": "boolean"
