      },
      "terms_in_footer": {
        "type": "boolean"
      },
      "confidentiality_in_footer": {
        "type": "boolean"
      }
    },
    "$files": {
      "thumbs": {
        "resolutions": [50, 320, 640, 2000]
      }
    },
    "$folders": {
      "folders": {
        "fields": {
          "title": {
            "type": "string"
          }
        },
        "$folders": {
          "stacks": {
            "$cover": {
              "width": 2000,
              "height": 2000,
