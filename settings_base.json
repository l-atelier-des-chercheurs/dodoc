{
  "protocol": "https",
  "host": "localhost",
  "desired_port": 8080,
  "redirect_port": "",
  "cache_content": true,
  "removePermanently": false,
  "versioning": true,
  "tokenIsValidForXDays": 60,

  "cacheDirname": "luma_cache",
  "contentPath": "luma_next",

  "privateKeyPath": "",
  "certificatePath": "",
  "passphrase": "",

  "lruCacheMax": 3000,
  "lruCacheMaxSize": 10000000,

  "deletedFolderName": "_bin",

  "ffmpeg_options": {
    "priority": 0,
    "timeout": 600
  },

  "mediaThumbQuality": 90,
  "maxFileSizeInMoForUpload": 10000,

  "regexpMatchFolderNames": "^([^.]+)$",
  "regexpGetFileExtension": "\\.[^.]*$",
  "regexpRemoveFileExtension": "(.+?)(\\.[^.]*$|$)",

  "api": {
    "enabled": false,
    "allow_all_domains": false,
    "domains_whitelist": ["localhost"]
  },

  "schema": {
    "fields": {
      "name_of_instance": {
        "type": "string"
      },
      "presentation_of_instance_fr": {
        "type": "string"
      },
      "presentation_of_instance_en": {
        "type": "string"
      },
      "contactmail_of_instance": {
        "type": "string"
      },
      "general_password": {
        "type": "string"
      }
    },
    "$folders": {
      "folders": {
        "$files": {
          "thumbs": {
            "resolutions": [180, 360, 1600]
          },
          "fields": {
            "title": {
              "type": "string"
            },
            "keywords": {
              "type": "array"
            },
            "date_created_corrected": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "caption": {
              "type": "string"
            },
            "belongs_to_stack": {
              "type": "string"
            },
            "is_stack": {
              "type": "boolean"
            },
            "stack_files_metas": {
              "type": "array"
            }
          }
        }
      },
      "authors": {
        "$can_be_created_by": "everyone",
        "fields": {
          "email": {
            "type": "string",
            "required": false,
            "unique": true
          },
          "name": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "role": {
            "type": "string",
            "options": ["contributor", "admin"],
            "default": "contributor",
            "only_admins_can_edit": true
          }
        },
        "$files": {
          "thumbs": {
            "resolutions": [180, 360, 1600]
          },
          "fields": {
            "title": {
              "type": "string"
            },
            "keywords": {
              "type": "array"
            },
            "date_created_corrected": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "caption": {
              "type": "string"
            }
          }
        }
      },
      "fonts": {
        "fields": {
          "title": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "font_files": {
            "type": "object"
          }
        },
        "$files": {}
      },
      "categories": {
        "fields": {
          "title": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "tag_color": {
            "type": "string"
          },
          "list_of_suggestions": {
            "type": "array"
          }
        },
        "$files": {}
      },
      "collections": {
        "fields": {
          "title": {
            "type": "string",
            "required": true,
            "unique": true
          },
          "stack_list": {
            "type": "array"
          }
        },
        "$files": {}
      }
    }
  }
}
