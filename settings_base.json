              },
              "date_created_corrected": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "caption": {
                "type": "string"
              },
              "stack_spot": {
                "type": "number"
              },
              "stack_files_metas": {
                "type": "array"
              }
            },
            "$files": {
              "thumbs": {
                "resolutions": [220, 360, 1600]
              },
              "fields": {
                "caption": {
