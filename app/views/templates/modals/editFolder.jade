
//- MODIFY FOLDER
div(id="modal-modify-folder" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
  h3#modalTitle.popoverTitle
    | !{dodoc.lang.modal.editFolder}
  form(onsubmit="return false;" class="modify-folder-form")
    input(type="text" class="modify-folder" value autofocus)
    select.modify-statut(name="statut")
      option(value='en cours')
        | !{dodoc.lang.modal.inprogress}
      option(value='termin√©')
        | !{dodoc.lang.modal.finished}
    +button('deleteFolder', '', 'isCollapsed')
    input(type="submit" class="submit-modify-folder" value="Valider")

  +button( 'close', '', 'isCollapsed')

div(id="modal-statut-alert" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
  p
    | !{dodoc.lang.modal.warningFinishedStatus}
  button.oui
    | !{dodoc.lang.ok}
  button.annuler(autofocus)
    | !{dodoc.lang.cancel}
  +button( 'close', '', 'isCollapsed')

  //- ALERT SUPPRIMER UN DOSSIER
div(id="modal-delete-alert" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog")
  p
    | !{dodoc.lang.modal.sureToRemoveFolder}
  hr
  button.oui
    | !{dodoc.lang.yes}
  button.annuler(autofocus)
    | !{dodoc.lang.cancel}
  +button( 'close', '', 'isCollapsed')
