//- Pop up media
.media-big_image.media-big.row(data-type="image")
  .mediaContent.small-12.large-8.columns
    img
  .mediaDataForm.small-12.large-4.columns
    include modals/mediaForm.jade

.media-big_video.media-big(data-type="video")
  .mediaContent.small-12.large-8.columns
    video(preload="none" controls)
      source()
  .mediaDataForm.small-12.large-4.columns
    include modals/mediaForm.jade

.media-big_stopmotion.media-big(data-type="stopmotion")
  .mediaContent.small-12.large-8.columns
    video(preload="none" controls)
      source()
  .mediaDataForm.small-12.large-4.columns
    include modals/mediaForm.jade

.media-big_audio.media-big(data-type="audio")
  .mediaContent.small-12.large-8.columns
    img
    audio(preload="none" controls)
      source()
  .mediaDataForm.small-12.large-4.columns
    include modals/mediaForm.jade

.media-big_text.media-big(data-type="text" data-id)
  .mediaContent
    form(onsubmit='return false;' class='add-media-text lead')
      input.js--submit-new-text_title(type='text' placeholder='Titre')
      textarea.js--submit-new-text_text(placeholder="Ajouter du texte ici")
      input(type='submit' class='js--submit-view-text-modify' value='Valider')
    +button('favButton', '', '')
    +button('deleteMediaBibli', '', '')


.project(data-statut)
  +button('editProjet', '', 'isCollapsed')
  .project-inside.flex_structure
    .project-content.flex_50.flex_structure
      a(href="" title="Dodoc").project-link
        h2.title
      .meta-data.flex_40
        .statut
          span
            | !{dodoc.lang.status}
          span.statut-type
        .created
          span
            | !{dodoc.lang.createdOn}
          span.create-date
        .modified
          span
            | !{dodoc.lang.modifiedOn}
          span.modify-date
      .button-to-pages.flex_60
        h3.legende
          | !{dodoc.lang.quickAccess}
        +button('capture', '', 'isCollapsed')
        +button('bibli', '', 'isCollapsed')
        +button('publications', '', 'isCollapsed')
    .image-wrapper.flex_50
      img
  ul.last-medias.grille_de_medias
    h3.legende
      | !{dodoc.lang.lastMediasAdded}

  .montage-list
    h1.legende
      | !{dodoc.lang.listOfPublications}
    ul.list-publi


li.dossier.small-12.medium-12.large-4.columns(data-statut data-name data-nom)
  .dossier-inside
    .content
      +button('editFolder', '', 'isCollapsed')
      a.folder-link(href title)
        h2.title
      .projet-list
    .meta-data.row
      .nb-projets.small-6.columns
        span.nb-projets-intitule
          | !{dodoc.lang.projects}
        span.nb-projets-count 0
      .statut.small-6.columns
        span
          | !{dodoc.lang.status}
        span.statut-type
      .created.small-6.columns
        span
          | !{dodoc.lang.createdOn}
        span.create-date
      .modified.small-6.columns
        span
          | !{dodoc.lang.modifiedOn}
        span.modify-date

    li.projetSnippet
      a.project-link(href)
        h3.title
        .vignette-visuel
          img(src)


